#include <stdio.h>
#include <string.h>

void printReverse(char str[]) {
    int length = strlen(str);
    for (int i = length - 1; i >= 0; i--) {
        printf("%c", str[i]);
    }
}

int main() {
    printf("A.Harshavardhan K.R\n");
    printf("192210042\n");	
    char str[100]; 
    printf("Enter a string: ");
    fgets(str, sizeof(str), stdin); 
    str[strcspn(str, "\n")] = 0;

    printf("Original string: %s\n", str);
    printf("Reversed string: ");
    printReverse(str);
    printf("\n");

    return 0;
}
